package br.com.sonner.secoes;

import java.util.Scanner;

public class Exercicio06 {

	public static void main(String[] args) {
		
		// Variaveis
		float valor_por_hora, salario;
		int horas_trabalhadas;
		Scanner teclado = new Scanner(System.in);
		
		
		// Entradas
		System.out.print("Qual o valor que você ganha por hora? ");
		valor_por_hora = teclado.nextFloat();
		
		System.out.print("quantas horas você trabalhou nesse mês? ");
		horas_trabalhadas = teclado.nextInt();
		
		
		// Processamento
		salario = (horas_trabalhadas * valor_por_hora);
		
		// Saida
		System.out.println("Neste mês seu salario é R$ " + salario);
		
		teclado.close();		

	}

}
